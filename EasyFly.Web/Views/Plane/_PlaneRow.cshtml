@model EasyFly.Application.ViewModels.PlaneViewModel

<tr>
    <td>@Model.Name</td>
    <td>@Model.Seats</td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <div class="d-flex">
                <form method="get" asp-controller="Plane" asp-action="Remove" class="me-2">
                    @Html.Hidden("planeId", Model.Id)
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
                <form method="get" asp-controller="Plane" asp-action="Edit" class="me-2">
                    @Html.Hidden("planeId", Model.Id)
                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    @Html.AntiForgeryToken()
                </form>
                <form method="get" asp-controller="Flight" asp-action="GetFlights">
                    @Html.Hidden("planeId", Model.Id)
                    <button type="submit" class="btn btn-success btn-sm">Add Flight</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </td>
    }
</tr>
