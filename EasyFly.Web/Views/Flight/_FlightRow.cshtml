@model EasyFly.Application.ViewModels.FlightViewModel

<tr>
    <td>@Model.FlightNumber</td>
    <td>@Model.DepartureTime</td>
    <td>@Model.ArrivalTime</td>
    <td>@Model.DepartureAirport.Name</td>
    <td>@Model.ArrivalAirport.Name</td>
    <td>@Model.FreeSeatCount</td>
    <td>@Model.Plane.Name</td>
    <td>@Model.TicketPrice BGN</td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <div class="d-flex">
                <a href="@Url.Action("GetTickets", "Ticket", new { flightId = Model.Id })" class="btn btn-info btn-sm me-2">
                    Tickets
                </a>
                <form method="get" asp-controller="Flight" asp-action="Remove" class="me-2">
                    @Html.Hidden("flightId", Model.Id)
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
                <form method="get" asp-controller="Flight" asp-action="Edit">
                    @Html.Hidden("flightId", Model.Id)
                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </td>
    }
</tr>
