@model EasyFly.Application.ViewModels.FlightViewModel

@{
    ViewData["Title"] = "Delete Flight";
}

<h1>Delete Flight</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model is not null)
{
    <h3>Are you sure you want to delete flight @Model.FlightNumber?</h3>
    <form asp-controller="Flight" asp-action="Delete" method="post">
        @Html.Hidden("flightId", Model.Id)
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
}