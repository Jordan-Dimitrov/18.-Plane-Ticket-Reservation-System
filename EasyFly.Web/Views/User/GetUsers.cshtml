@model EasyFly.Application.ViewModels.UserPagedViewModel

@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center">Users</h1>

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success text-center" role="alert">
        <h5>@ViewBag.Success</h5>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center" role="alert">
        <h5>@ViewBag.ErrorMessage</h5>
    </div>
}

<br />

<div class="container">
    <div class="table-container mx-auto" style="max-width: 800px;">
        @if (Model.Users is not null && Model.Users.Any())
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="d-flex">
                                        <a href="@Url.Action("GetTickets", "Ticket", new { userId = item.Id })" class="btn btn-info btn-sm me-2">
                                            View Tickets
                                        </a>
                                        <form method="post" asp-controller="User" asp-action="Delete" class="me-2">
                                            @Html.Hidden("userId", item.Id)
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                        <form method="get" asp-controller="User" asp-action="Edit">
                                            @Html.Hidden("userId", item.Id)
                                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No users found.</p>
        }
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 d-flex justify-content-between">
            @if (Model.PageNumber > 1)
            {
                <a href="@Url.Action("GetUsers", new { page = Model.PageNumber - 1 })" class="btn btn-primary">Previous</a>
            }
            else
            {
                <span></span>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a href="@Url.Action("GetUsers", new { page = Model.PageNumber + 1 })" class="btn btn-primary">Next</a>
            }
        </div>
    </div>
</div>
