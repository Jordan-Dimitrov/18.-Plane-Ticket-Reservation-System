@model EasyFly.Application.ViewModels.UserPagedViewModel

@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center">Users</h1>

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success text-center" role="alert">
        <h5>@ViewBag.Success</h5>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center" role="alert">
        <h5>@ViewBag.ErrorMessage</h5>
    </div>
}

<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if(Model.Users is not null)
            {
                @foreach (var item in Model.Users)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h4 class="card-title">@item.Username</h4>
                            <p class="card-text">Email: @item.Email</p>
                            <p class="card-text">Phone Number: @item.PhoneNumber</p>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex mt-2">
                                    <form method="post" asp-controller="User" asp-action="Delete" class="me-2">
                                        @Html.Hidden("userId", item.Id)
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                        @Html.AntiForgeryToken()
                                    </form>
                                    <form method="get" asp-controller="User" asp-action="Edit">
                                        @Html.Hidden("userId", item.Id)
                                        <button type="submit" class="btn btn-primary">Edit</button>
                                        @Html.AntiForgeryToken()
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 d-flex justify-content-between">
            @if (Model.PageNumber > 1)
            {
                <a href="@Url.Action("GetUsers", new { page = Model.PageNumber - 1 })" class="btn btn-primary">Previous</a>
            }
            else
            {
                <a></a>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a href="@Url.Action("GetUsers", new { page = Model.PageNumber + 1 })" class="btn btn-primary">Next</a>
            }
        </div>
    </div>

    <br />
</div>