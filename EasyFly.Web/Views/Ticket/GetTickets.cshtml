@model EasyFly.Application.ViewModels.TicketPagedViewModel

@{
    ViewData["Title"] = "Tickets";
}

<h1 class="text-center">Tickets</h1>

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success text-center" role="alert">
        <h5>@ViewBag.Success</h5>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center" role="alert">
        <h5>@ViewBag.ErrorMessage</h5>
    </div>
}

<br />

<div class="container-fluid">
    @if (Model.Tickets is not null)
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <td>Flight</td>
                        <th>Plane</th>
                        <th>Seat</th>
                        <th>Passenger</th>
                        <th>Type</th>
                        <th>Luggage</th>
                        <th>Departure</th>
                        <th>Arrival</th>
                        <th>Price(BGN)</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Tickets)
                    {
                        <tr>
                            <td>@item.Flight.FlightNumber</td>
                            <td>@item.Seat.Plane.Name</td>
                            <td>@item.Seat.Row @item.Seat.SeatLetter</td>
                            <td>@item.PersonFirstName @item.PersonLastName</td>
                            <td>@item.PersonType</td>
                            <td>@item.LuggageSize</td>
                            <td>@item.Flight.DepartureAirport.Name, @item.Flight.DepartureTime</td>
                            <td>@item.Flight.ArrivalAirport.Name, @item.Flight.ArrivalTime</td>
                            <td>@item.Price</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <div class="d-flex">
                                        <form method="get" asp-controller="Ticket" asp-action="Remove" class="me-2">
                                            @Html.Hidden("ticketId", item.Id)
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                        <form method="get" asp-controller="Ticket" asp-action="Edit">
                                            @Html.Hidden("ticketId", item.Id)
                                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6 d-flex justify-content-between">
            @if (Model.PageNumber > 1)
            {
                <a href="@Url.Action("GetTickets", new { page = Model.PageNumber - 1 })" class="btn btn-primary">Previous</a>
            }
            else
            {
                <span></span>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <a href="@Url.Action("GetTickets", new { page = Model.PageNumber + 1 })" class="btn btn-primary">Next</a>
            }
        </div>
    </div>
</div>
