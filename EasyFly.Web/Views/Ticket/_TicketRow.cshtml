@model EasyFly.Application.ViewModels.TicketViewModel

<tr>
    <td>@Model.Flight.FlightNumber</td>
    <td>@Model.Seat.Plane.Name</td>
    <td>@Model.Seat.Row @Model.Seat.SeatLetter</td>
    <td>@Model.PersonFirstName @Model.PersonLastName</td>
    <td>@Model.PersonType</td>
    <td>@Model.LuggageSize</td>
    <td>@Model.Flight.DepartureAirport.Name, @Model.Flight.DepartureTime</td>
    <td>@Model.Flight.ArrivalAirport.Name, @Model.Flight.ArrivalTime</td>
    <td>@Model.Price</td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <div class="d-flex">
                <form method="get" asp-controller="Ticket" asp-action="Remove" class="me-2">
                    @Html.Hidden("ticketId", Model.Id)
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
                <form method="get" asp-controller="Ticket" asp-action="Edit">
                    @Html.Hidden("ticketId", Model.Id)
                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </td>
    }
</tr>
