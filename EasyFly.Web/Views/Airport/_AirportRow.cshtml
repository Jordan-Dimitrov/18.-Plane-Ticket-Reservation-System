@model EasyFly.Application.ViewModels.AirportViewModel

<tr>
    <td>@Model.Name</td>
    <td>@Model.Latitude</td>
    <td>@Model.Longtitude</td>
    @if (User.IsInRole("Admin"))
    {
        <td>
            <div class="d-flex">
                <form method="get" asp-controller="Airport" asp-action="Remove" class="me-2">
                    @Html.Hidden("airportId", Model.Id)
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
                <form method="get" asp-controller="Airport" asp-action="Edit">
                    @Html.Hidden("airportId", Model.Id)
                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </td>
    }
    <td>
        <iframe width="200"
                height="150"
                style="border:0;"
                loading="lazy"
                allowfullscreen
                src="https://maps.google.com/maps?q=@Model.Latitude,@Model.Longtitude&z=10&output=embed">
        </iframe>
    </td>
</tr>
