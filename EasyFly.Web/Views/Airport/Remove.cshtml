@model EasyFly.Application.ViewModels.AirportViewModel

@{
    ViewData["Title"] = "Delete Airport";
}

<h1>Delete Airport</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model is not null)
{
    <h3>Are you sure you want to delete @Model.Name?</h3>
    <form asp-controller="Airport" asp-action="Delete" method="post">
        @Html.Hidden("airportId", Model.Id)
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
}