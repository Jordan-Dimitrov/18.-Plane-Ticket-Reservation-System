@model EasyFly.Application.ViewModels.AirportViewModel

@{
    ViewData["Title"] = "Edit Airport";
}

<h1>Edit Airport</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model is not null)
{
    <form asp-controller="Airport" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="Latitude">Latitude:</label>
            <input type="text" class="form-control" id="Latitude" name="Latitude" value="@Model.Latitude" />
        </div>
        <div class="form-group">
            <label for="Longtitude">Longitude:</label>
            <input type="text" class="form-control" id="Longtitude" name="Longtitude" value="@Model.Longtitude" />
        </div>
        @Html.AntiForgeryToken()
        @Html.Hidden("airportId", Model.Id)
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}